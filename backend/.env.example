# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lottodrop
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# JWT Configuration
JWT_SECRET=generate_with_openssl_rand_base64_64
# Generate with: openssl rand -base64 64

# Admin Configuration
ADMIN_EMAIL=admin@lottodrop.com
ADMIN_PASSWORD=use_strong_password_min_16_chars

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_SECRET=generate_another_secure_secret

# API Keys (if needed)
STRIPE_API_KEY=
SENDGRID_API_KEY=

# Security Settings
BCRYPT_ROUNDS=12
TOKEN_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============ Pulse2Pay Crypto Configuration ============

# Pulse2Pay API
PULSE2PAY_API_URL=https://api.pulse2pay.com/v1
PULSE2PAY_MERCHANT_ID=your_merchant_id
PULSE2PAY_API_KEY=your_api_key

# Webhook Security (MANDATORY in production)
# Get this from Pulse2Pay dashboard -> Settings -> Webhooks
PULSE2PAY_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Optional: IP Whitelist for webhooks (comma-separated IPs or CIDR ranges)
# Obtain from Pulse2Pay documentation or support
# Example: PULSE2PAY_WEBHOOK_IPS=1.2.3.4,5.6.7.8,10.0.0.0/8
PULSE2PAY_WEBHOOK_IPS=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Never commit .env file to version control
# Copy this file to .env and fill in your values