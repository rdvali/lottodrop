# LottoDrop Environment Variables Example
# Copy this file to .env and fill in your values

# Database Configuration
DB_NAME=lottodrop
DB_USER=lottodrop_user
DB_PASSWORD=secure_password_123
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT & Security
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=12

# Server Configuration
NODE_ENV=production
BACKEND_PORT=3001
FRONTEND_PORT=8080
ADMIN_PORT=8081

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:81,http://localhost:3000,http://localhost:3001,https://lottodrop.net

# Admin User
ADMIN_EMAIL=admin@lottodrop.com
ADMIN_PASSWORD=Admin123!@#

# Frontend Build Args
VITE_API_URL=/api
VITE_SOCKET_URL=
VITE_APP_NAME=LottoDrop
VITE_APP_VERSION=2.0.0

# Admin Panel Build Args
REACT_APP_API_URL=http://localhost:3001

# Pulse2Pay Crypto Deposits Configuration
# Get your API credentials from https://pulse2pay.com
PULSE2PAY_API_KEY=mk_live_your_api_key_here
PULSE2PAY_API_SECRET=your_api_secret_here
PULSE2PAY_API_URL=https://api.pulse2pay.com/api/merchant/v1
PULSE2PAY_WEBHOOK_SECRET=your_webhook_secret_here
